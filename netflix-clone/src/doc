/* Mobile Responsiveness */
@media (max-width: 768px) {
  .banner {
    height: 50vh; /* Reduce height on smaller screens */
    margin-top: 10vh; /* Adjust the margin for smaller screens */
  }

  .banner_contents {
    margin-left: 20px;
    padding-top: 100px; /* Adjust text position for mobile */
  }

  .banner_title {
    font-size: 2rem; /* Smaller font size on mobile */
    padding-bottom: 0.5rem;
  }

  .banner_description {
    font-size: 0.9rem; /* Smaller font size for the description */
    width: 90%; /* Ensure it fits well on smaller screens */
    max-width: none; /* Remove the max-width constraint */
    height: auto; /* Allow for more room for text */
  }

  .banner_button {
    font-size: 1rem;
    padding: 0.8rem 2.5rem;
    margin-right: 1rem;
  }

  .banner_fadeBottom {
    /* height: 30vh;  Shorten the fade effect  */
    display: none;
  }
}

/* Tablet Responsiveness */
@media (max-width: 1024px) {
  .banner {
    height: 60vh; /* Slightly smaller height for tablets */
  }

  .banner_contents {
    margin-left: 30px;
    padding-top: 200px; /* Adjust text padding */
  }

  .banner_title {
    font-size: 2.5rem; /* Slightly smaller title on tablet */
  }

  .banner_description {
    font-size: 1rem; /* Slightly smaller description */
    width: 80%; /* More width for the description */
    height: auto; /* Remove fixed height */
  }

  .banner_button {
    font-size: 1.1rem;
    padding: 0.9rem 2.8rem;
  }

  .banner_fadeBottom {
    /* height: 35vh;  Adjust fade effect  */
    display: none;
  }
}



.banner {
  margin-top: 3vh;
  height: 80vh;
  margin-bottom: -80px;
  color: white;
  object-fit: cover; /* Make sure the content inside adjusts well */
  background-size: cover; /* Make the background image cover the area */
  background-position: center; /* Center the image */
  background-repeat: no-repeat;
  position: relative;

}

.banner_contents {
  margin-left: 30px;
  padding-top: 300px; /* Adjust the position of text */
}

.banner_title {
  font-size: 2.5rem;
  font-weight: 800;
  padding-bottom: 0.3rem;
  margin: 0;
}

.banner_description {
  margin-top: 10px;
  font-size: 1rem;
  width: 45rem;
  max-width: 360px;
  line-height: 1.5;
  padding: 1rem 0;
  height: 80px;
}

.banner_button {
  font-size: 1.2rem;
  font-weight: 700;
  padding: 1rem 3rem;
  margin-right: 2rem;
  color: white;
  border: none;
  cursor: pointer;
  border-radius: 0.2vw;
